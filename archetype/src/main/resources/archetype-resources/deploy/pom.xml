<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>${rootArtifactId}</artifactId>
        <groupId>${groupId}</groupId>
        <version>${version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>${artifactId}</artifactId>
    <name>Example Visallo Plugins: Deployment</name>

    <properties>
        <visallo.dir>${project.basedir}/../work</visallo.dir>
        <visallo.http.port>8080</visallo.http.port>
        <visallo.https.port>8443</visallo.https.port>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.visallo</groupId>
            <artifactId>visallo-dev-tomcat-server</artifactId>
        </dependency>
        <!-- javax.servlet is included here for IDE classpaths, but is excluded in the 'copy-libs' execution, below. -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-auth</artifactId>
        </dependency>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-web</artifactId>
        </dependency>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-worker</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-war</id>
                        <configuration>
                            <outputDirectory>${visallo.dir}/war</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.visallo</groupId>
                                    <artifactId>visallo-web-war</artifactId>
                                    <version>${visallo.version}</version>
                                    <type>war</type>
                                </artifactItem>
                            </artifactItems>
                            <useBaseVersion>true</useBaseVersion>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludes>WEB-INF/lib/**,WEB-INF/classes/**</excludes>
                        </configuration>
                        <phase>compile</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>copy-visallo-configs</id>
                        <configuration>
                            <outputDirectory>${visallo.dir}/config</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.visallo</groupId>
                                    <artifactId>visallo-config-example</artifactId>
                                    <version>${visallo.version}</version>
                                    <classifier>config</classifier>
                                    <type>tgz</type>
                                </artifactItem>
                            </artifactItems>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                        <phase>compile</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-local-configs</id>
                        <configuration>
                            <outputDirectory>${visallo.dir}/config</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/../config</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <id>replace-debug-log-levels</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <file>${visallo.dir}/config/log4j.xml</file>
                            <replacements>
                                <replacement>
                                    <token>value="DEBUG"</token>
                                    <value>value="INFO"</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${visallo.dir}</directory>
                            <excludes>
                                <exclude>datastore/**</exclude>
                            </excludes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>debug</id>
            <activation>
                <property>
                    <name>debug</name>
                </property>
            </activation>
            <properties>
                <debug.flag>-Xdebug</debug.flag>
                <debug.options>-Xrunjdwp:transport=dt_socket,address=8000,server=y,suspend=y</debug.options>
            </properties>
        </profile>
        <profile>
            <id>run</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${plugin.maven.exec.version}</version>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>${debug.flag}</argument>
                                <argument>${debug.options}</argument>
                                <argument>-DVISALLO_DIR=${visallo.dir}</argument>
                                <argument>-Dvisallo.VISALLO_DIR=${visallo.dir}</argument>
                                <argument>-classpath</argument>
                                <classpath/>
                                <argument>org.visallo.web.TomcatWebServer</argument>
                                <argument>--webAppDir</argument>
                                <argument>${visallo.dir}/war</argument>
                                <argument>--port</argument>
                                <argument>${visallo.http.port}</argument>
                                <argument>--httpsPort</argument>
                                <argument>${visallo.https.port}</argument>
                                <argument>--keyStorePath</argument>
                                <argument>${visallo.dir}/config/keystore.jks</argument>
                                <argument>--keyStorePassword</argument>
                                <argument>password</argument>
                                <argument>--trustStorePath</argument>
                                <argument>${visallo.dir}/config/truststore.jks</argument>
                                <argument>--trustStorePassword</argument>
                                <argument>password</argument>
                            </arguments>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
